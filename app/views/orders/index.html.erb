<h2>Order List</h2>

<p>
  <% @orders.map do |order| %>
    <p>
      <%= link_to "Order #{order.id}", order_path(order.id) %>
      <strong>Date Submited:</strong> <%= order.date.strftime("%-d %B %Y") unless order.date.nil? %>
      <%= link_to "Mark Completed", order_path(order.id), :method => "delete" if Date.today > order.date + 7 * 24 * 3600 %> 
    </p>
  <% end %>
</p>
