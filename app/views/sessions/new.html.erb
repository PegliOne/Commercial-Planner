<h2>Log In</h2>

<%= form_tag create_session_path do %>

  <p>
    <%= label_tag :email %>
    <%= email_field_tag :email, nil, :autofocus => true %>
  </p>

  <p>
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </p>

  <p>
    <%= submit_tag "Log In" %>
  </p>

<% end %>

<% if flash[:error].present? %>
  <p>
    <%= flash[:error] %>
  </p>
<% end %>
