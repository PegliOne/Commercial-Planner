<h2>Sign Up</h2>

<%= form_for @user do |f| %>
  <p>
    <%= f.label :name %>
    <%= f.text_field :name, :required => true %>
  </p>
  <p>
    <%= f.label :email %>
    <%= f.text_field :email, :required => true %>
  </p>
  <p>
    <%= f.label :mobile %>
    <%= f.text_field :mobile %>
  </p>
  <p>
    <%= f.label :available_hours %>
    <%= f.number_field :available_hours, :required => true, :min => 3, :max => 40 %>
  </p>
  <p>
    <%= f.label :password %>
    <%= f.text_field :password, :required => true %>
  </p>
  <p>
    <%= f.label :password_confirmation %>
    <%= f.text_field :password_confirmation, :required => true %>
  </p>

  <p>
    <%= f.submit "Sign Up!" %>
  </p>

<% end %>

<% if @user.errors.any? %>
  <% @user.errors.full_messages.each do |msg| %>
    <p>-<%= msg %></p>
  <% end %>
<% end %>
